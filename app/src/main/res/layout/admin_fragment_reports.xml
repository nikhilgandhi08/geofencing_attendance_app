<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light2"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_analytics"
                android:layout_marginEnd="12dp"
                app:tint="@color/primary_color" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Admin Reports &amp; Analytics"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary2" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRefresh"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:icon="@drawable/ic_refresh"
                app:iconTint="@color/primary_color"
                android:backgroundTint="@color/white2" />

        </LinearLayout>

        <!-- KPI Overview Cards Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“Š Key Performance Indicators"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary2"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <!-- First Row - 2 Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <!-- Daily Attendance Rate Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:strokeWidth="0dp"
                    android:backgroundTint="@color/blue_500">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“…"
                            android:textSize="24sp"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvAttendanceRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="85.4%"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="@color/white2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Daily Attendance"
                            android:textSize="12sp"
                            android:textColor="@color/white_80"
                            android:textAlignment="center" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Punctuality Rate Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:strokeWidth="0dp"
                    android:backgroundTint="@color/green_500">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ•"
                            android:textSize="24sp"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvPunctualityRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="78.2%"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="@color/white2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Punctuality Rate"
                            android:textSize="12sp"
                            android:textColor="@color/white_80"
                            android:textAlignment="center" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

        <!-- Last 7 Days Attendance Overview Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/border_light"
            android:backgroundTint="@color/card_background_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last 7 Days Attendance Overview"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary2"
                    android:drawableStart="@drawable/ic_bar_chart"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily employee login entries over the past week"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary2"
                    android:layout_marginBottom="16dp" />

                <!-- Bar Chart Container -->
                <FrameLayout
                    android:id="@+id/barChartContainer"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:background="@color/surface_color">

                    <!-- Chart View for Bar Chart -->
                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/attendanceBarChart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp" />

                    <!-- Placeholder for Bar Chart (fallback) -->
                    <TextView
                        android:id="@+id/barChartPlaceholder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“Š Bar Chart\n(7-Day Attendance Overview)"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textColor="@color/text_secondary2"
                        android:textSize="14sp"
                        android:visibility="gone" />

                </FrameLayout>

                <!-- Chart Legend -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="center">

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@color/primary_blue"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Daily Logins"
                        android:textSize="11sp"
                        android:textColor="@color/text_secondary2" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Login Time Distribution Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeWidth="0dp"
            android:backgroundTint="@color/card_background_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â° Daily Login Time Scatter Plot"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary2"
                    android:layout_marginBottom="16dp" />

                <FrameLayout
                    android:id="@+id/scatterChartContainer"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/chart_background">

                    <!-- Optional placeholder -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Scatter Plot\n(Login Time Distribution)"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textColor="@color/text_secondary2"
                        android:textSize="14sp" />

                </FrameLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <!-- Leave Request Status Summary -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeWidth="0dp"
            android:backgroundTint="@color/card_background_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“‹ Leave Request Status Summary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary2"
                    android:layout_marginBottom="16dp" />

                <!-- Status Cards Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- Pending Status -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@color/status_pending_bg"
                        android:gravity="center"
                        android:layout_marginEnd="8dp"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvPendingCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/status_pending" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pending"
                            android:textSize="12sp"
                            android:textColor="@color/status_pending" />

                    </LinearLayout>

                    <!-- Approved Status -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@color/status_approved_bg"
                        android:gravity="center"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvApprovedCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="28"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/status_approved" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Approved"
                            android:textSize="12sp"
                            android:textColor="@color/status_approved" />

                    </LinearLayout>

                    <!-- Rejected Status -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@color/status_rejected_bg"
                        android:gravity="center"
                        android:layout_marginStart="8dp"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvRejectedCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/status_rejected" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rejected"
                            android:textSize="12sp"
                            android:textColor="@color/status_rejected" />

                    </LinearLayout>

                </LinearLayout>

                <!-- View Details Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnViewLeaveDetails"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="View Detailed Leave Report"
                    app:icon="@drawable/ic_view_list"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:strokeColor="@color/primary_blue"
                    android:textColor="@color/primary_blue" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvLeaveReport"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:visibility="gone"  /> <!-- hidden initially -->



            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Most Regular Employees Leaderboard -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeWidth="0dp"
            android:backgroundTint="@color/card_background_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ† Most Regular Employees (This Month)"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary2"
                    android:layout_marginBottom="16dp" />

                <!-- Leaderboard RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvLeaderboard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:itemCount="5"
                    tools:listitem="@layout/admin_reports_leaderboard" />

                <!-- Show All Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnShowAllEmployees"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:text="Show All Employees"
                    app:icon="@drawable/ic_expand_more"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:textColor="@color/primary_blue" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>



    </LinearLayout>

</ScrollView>